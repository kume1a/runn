<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="backgroundColor" format="color" />
    <attr name="iconSize" format="dimension" />

    <declare-styleable name="GenderChooser">
        <attr name="icon_male" format="reference" />
        <attr name="icon_female" format="reference" />
        <attr name="color_icon" format="color" />
        <attr name="color_background" format="color" />
        <attr name="color_foreground" format="color" />
        <attr name="size_icon" format="dimension" />
        <attr name="animation_duration" format="dimension" />
    </declare-styleable>

    <declare-styleable name="OnboardingIndicator">
        <attr name="colorActive" format="color" />
        <attr name="colorInactive" />
        <attr name="indicatorCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="BottomNav">
        <attr name="menu" format="reference" />
        <attr name="backgroundColor"/>
        <attr name="sideMargins" format="dimension" />
        <attr name="itemPadding" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="itemFontFamily" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="iconSize"  />
        <attr name="iconMargin" format="dimension" />
        <attr name="iconTintInactive" format="color" />
        <attr name="iconTintActive" format="color" />
        <attr name="activeItem" format="integer" />
        <attr name="centerFabSize" format="dimension" />
        <attr name="centerFabMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DiamondFab">
        <attr name="backgroundColor"/>
        <attr name="icon" format="reference" />
        <attr name="iconSize" />
    </declare-styleable>

    <declare-styleable name="TriplePieChart">
        <attr name="colorOuter" format="color" />
        <attr name="colorMiddle" format="color"/>
        <attr name="colorInner" format="color" />
        <attr name="colorInactive" format="color"/>
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeMargin" format="dimension" />
    </declare-styleable>

    <attr name="GenderChooser" format="reference" />
    <attr name="OnboardingIndicator" format="reference" />
    <attr name="BottomNav" format="reference" />
    <attr name="DiamondFab" format="reference" />
    <attr name="TriplePieChart" format="reference" />
    <attr name="BarChartBackground" format="reference" />
</resources>